---
import { Picture } from 'astro:assets'
import certIcon from '@assets/icons/certs.svg'
import projectIcon from '@assets/icons/projects.svg'
import supportIcon from '@assets/icons/support.svg'
---

<section class='grid md:grid-cols-2 lg:grid-cols-3 gap-10 rounded-3xl md:rounded-full border border-zinc-800 py-10 px-14 my-10 shadow-md'>
  <article class='flex flex-col md:flex-row gap-4 justify-center'>
    <header class='flex justify-center md:justify-start'>
      <Picture src={certIcon} alt='Icono de un certificado' loading='eager' />
    </header>
    <footer class='text-center md:text-left'>
      <p class='text-xl font-light text-zinc-400'>+10 a√±os</p>
      <p class='text-primary font-semibold text-lg'>Experiencia</p>
    </footer>
  </article>
  <article class='flex flex-col md:flex-row gap-4 justify-center'>
    <header class='flex justify-center md:justify-start'>
      <Picture src={projectIcon} alt='Icono de un computador con un engranaje' loading='eager' />
    </header>
    <footer class='text-center md:text-left'>
      <p class='text-xl font-light text-zinc-400'>+30 proyectos</p>
      <p class='text-primary font-semibold text-lg'>Completados</p>
    </footer>
  </article>
  <article class='flex flex-col md:flex-row gap-4 justify-center'>
    <header class='flex justify-center md:justify-start'>
      <Picture src={supportIcon} alt='Icono de una persona dando un soporte' loading='eager' />
    </header>
    <footer class='text-center md:text-left'>
      <p class='text-xl font-light text-zinc-400'>Soporte</p>
      <p class='text-primary font-semibold text-lg'>Online 24/7</p>
    </footer>
  </article>
</section>
