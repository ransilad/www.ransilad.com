---
import SocialNetworks from './SocialNetworks.astro'
---

<section class='flex flex-col md:flex-row my-auto items-center'>
  <div class='md:w-1/2 flex flex-col order-2 md:order-1 items-center md:items-start'>
    <div class='bg-primary w-fit px-4 py-2 rounded-t-full rounded-r-full text-zinc-950 font-bold'>Hola, soy</div>
    <h1 class='text-4xl md:text-6xl font-extrabold mt-5'>Abel Rangel</h1>
    <h2 class='text-xl md:text-2xl font-light text-zinc-400'>Desarrollador Fullstack</h2>
    <SocialNetworks />
  </div>
  <div class='w-4/5 sm:w-80 lg:w-96 mx-auto order-1 md:order-2 mb-16 mt-32 md:mb-0 md:mt-0'>
    <img
      class='rounded-full border-zinc-900 border-[20px] aspect-square w-full shadow-3xl-center shadow-primary'
      src='/images/abelRangel.webp'
      alt='Abel Rangel'
    />
  </div>
</section>
